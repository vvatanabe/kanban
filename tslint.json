{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-empty-interface": false, // TODO  want to remove!
        "no-var-requires": false, // TODO  want to remove!
        "object-literal-sort-keys": false,
        "ban-types": [
            false,
            [
                "Object"
            ]
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "no-default-export": false,
        "prefer-object-spread": true,
        "no-namespace": false,
        "interface-name": [
            false
        ],
        "max-classes-per-file": [
            false
        ],
        "max-line-length": [
            true,
            140
        ],
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ]
    },
    "rulesDirectory": []
}